{
  "name": "geforcenow",
  "appId": "com.github.kenvandine.${name}",
  "productName": "GeForce NOW",
  "version": "1.11.0",
  "description": "A Linux desktop web app for GeForce NOW",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "start-tray": "electron . --tray",
    "build": "electron-builder --publish never"
  },
  "build": {
    "asar": false,
    "linux": {
      "target": [
        "dir"
      ],
      "category": "Games",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "snap": {
      "plugs": [
        "default",
        "audio-record",
        "joystick"
      ]
    },
    "extraFiles": [
      "com.github.kenvandine.${name}.desktop"
    ]
  },
  "repository": "https://github.com/kenvandine/geforcenow",
  "keywords": [
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "author": "Ken VanDine <ken@vandine.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kenvandine/geforcenow/issues"
  },
  "homepage": "https://github.com/kenvandine/geforcenow#readme",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^25.1.8",
    "electron-package": "^0.1.0"
  },
  "dependencies": {
    "discord-rich-presence": "^0.0.8"
  }
}
